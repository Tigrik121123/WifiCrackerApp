#:kivy 2.0.0

BoxLayout:
    orientation: 'vertical'
    padding: '10dp'
    spacing: '10dp'

    Label:
        text: 'WiFi Brute-force Tool'
        font_size: '24sp'
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        size_hint: 1, 1
        TextInput:
            id: log_output
            text: 'Нажмите "Начать проверку" для запуска...\n'
            readonly: True
            size_hint_y: None
            height: max(self.minimum_height, root.height) # Для скроллинга

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        spacing: '10dp'

        Button:
            text: 'Начать проверку'
            on_press: app.start_brute_force()

        Button:
            text: 'Остановить'
            on_press: app.stop_brute_force()